{{#if post}}
    {{{post_card post false}}}

    {{#each post.comments}}
        {{> comment}}
    {{/each}}


        <div class='card my-3 mx-auto comment-card'>
            <form class='form comment-form' data-id='{{post.id}}'>
                <div class='form-group'>
                    <label for='comment-text' class='form-label'>Comment</label>
                    <textarea
                        class='form-control'
                        id='comment-text'
                        rows='3'
                    ></textarea>
                </div>
                <div class='form-group'>
                    <button
                        type='submit'
                        class='btn btn-primary'
                    >Submit</button>
                </div>
            </form>
        </div>

        <script src="../js/comments.js"></script>
{{/if}}