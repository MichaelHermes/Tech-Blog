<section class="card my-3 mx-auto post-card">
	<h2 class='card-header fw-bold'>{{#if post}}Edit Post{{else}}Create New Post{{/if}}</h2>

	<div class="card-body">
		<form class='form post-form' {{#if post}}data-id='{{post.id}}'{{/if}}>
			<div class='mb-3'>
				<label class='form-label fw-bold' for='post-title'>Title</label>
				<input
					class='form-control'
					type='text'
					id='post-title'
					name='post-title'
					value='{{#if post}}{{post.title}}{{/if}}'
				/>
			</div>
			<div class='mb-3'>
				<label class='form-label fw-bold' for='post-content'>Content</label>
				<textarea
					class='form-control'
					id='post-content'
					name='post-content'
				>{{#if post}}{{post.content}}{{/if}}</textarea>
			</div>
			{{#if post}}
				<button
					type='submit'
					class='btn btn-secondary'
					id='update-post'
				>Update Post</button>
				<button
					type='button'
					class='btn btn-secondary'
					id='delete-post'
					data-id='{{post.id}}'
					onclick='deletePost()'
				>Delete</button>
			{{else}}
				<button
					type='submit'
					class='btn btn-secondary'
				>Create</button>
			{{/if}}
		</form>
	</div>
</section>

<script src='../../js/post.js'></script>